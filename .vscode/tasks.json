{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-game",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-std=c99",

                // Compilar TODOS .c da pasta src
                "${workspaceFolder}/src/*.c",

                // Incluir headers
                "-I", "${workspaceFolder}/include",

                // Biblioteca Raylib
                "-L", "${workspaceFolder}/raylib/lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",

                // Output
                "-o", "${workspaceFolder}/src/output/game.exe"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}
